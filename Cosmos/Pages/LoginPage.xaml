<Page x:Class="Cosmos.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cosmos"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="380"
      Title="LoginPage">

    <Grid Background="{StaticResource BackgroundLightBrush}">
        <Viewbox>
            <Border  Width="380" Padding="60,100"
                    TextBlock.TextAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Авторизация" Style="{StaticResource AutorizationTextBlock}"/>
                    <TextBox Margin="0,50,0,10" Tag="Логин" Style="{StaticResource InputsTextBox}"/>
                    <TextBox Margin="0,0,0,30" Tag="Пароль" Style="{StaticResource InputsTextBox}"/>
                    <Button Content="Подключиться"/>
                </StackPanel>
            </Border>
        </Viewbox>
    </Grid>
</Page>
